{
    "manifest_version": 2,
    "name": "VibrationAA",
    "version": "1.0",

    "description": "AAを自動検出し振動させます",

	 //バックグラウンドで動く処理
 	"background": {
  	//スクリプトファイルを登録
  	"scripts": ["background.js"]
 	},

    "permissions": [
        "tabs", "http://*/*","https://*/*"
    ],

    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "64": "icons/icon.png"
    },

    "browser_action": {
        "default_icon": "icons/icon.png", 
        "default_title": "VibrationAA"
    }
    
}